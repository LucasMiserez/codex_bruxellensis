---
import Image from "astro/components/Image.astro";
import Logo from "../images/logo.webp";

const pages = [
  { name: "Home", url: "/" },
  { name: "Kringliederen", url: "/association" },
  { name: "Nederlands", url: "/" },
  { name: "Frans", url: "/" },
  { name: "Engels", url: "/" },
  { name: "Anderstalig", url: "/" },
  { name: "Reglement", url: "/rules" },
];
---

<div class="drawer">
  <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col">
    <!-- Navbar -->
    <div class="navbar bg-base-300 w-full">
      <div class="flex-none lg:hidden">
        <label
          for="my-drawer-3"
          aria-label="open sidebar"
          class="btn btn-square btn-ghost"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            class="inline-block h-6 w-6 stroke-current"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </label>
      </div>
      <div class="mx-2 flex-1 px-2">
        <a href="/" class="flex flex-row text-center space-x-4">
          <Image src={Logo} alt={"logo"} class={"w-5"} />
          <div class="flex flex-col">
            <h1 class="font-bold">Codex Studiosorum Bruxellensis</h1>
            <span class="text-xs">Ut semper Viva, Crescat et Floreat</span>
          </div>
        </a>
      </div>
      <div class="hidden flex-none lg:block">
        <ul class="menu menu-horizontal">
          {
            pages.map((page) => (
              <li>
                <a href={page.url}>{page.name}</a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
  <div class="drawer-side z-50">
    <label for="my-drawer-3" aria-label="close sidebar" class="drawer-overlay"
    ></label>
    <ul class="menu bg-base-200 min-h-full w-80 p-4">
      {
        pages.map((page) => (
          <li>
            <a href={page.url}>{page.name}</a>
          </li>
        ))
      }
    </ul>
  </div>
</div>
